<header>
  <nav class="navbar navbar-expand-md navbar-dark bg-info">
    <a class="navbar-brand" href="/urls">TinyApp</a>
    <div class="collapse navbar-collapse" id="navbarNavAltMarkup">
      <div class="navbar-nav">
        <a class="nav-item nav-link" href="/urls">My URLs</a>
        <a class="nav-item nav-link" href="/urls/new">Create New URL</a>
      </div>
    </div>
    <div>
      <% if (!locals["user"]) { %>
        <a class="btn btn-primary" href="/login" >Login</a>
        <a class="btn btn-primary" href="/register">Register</a>
        <% } else { %>
          <form class="form-inline" method="POST" action="/logout?_method=DELETE">
            <label class="nav-item" style="margin-right: 1em">Logged in as: <%= user.email %></label>
            <input class="btn btn-secondary" type="submit" value="Logout"/>
          </form>
          <% } %>
        </div>
    <button class="navbar-toggler" type="button" data-toggle="collapse" data-target="#navbarNavAltMarkup" aria-controls="navbarNavAltMarkup" aria-expanded="false" aria-label="Toggle navigation">
      <span class="navbar-toggler-icon"></span>
    </button>
  </nav>
</header>