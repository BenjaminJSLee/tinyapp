<header>
  <nav class="navbar navbar-expand-md navbar-dark bg-success">
    <a class="navbar-brand" href="/urls">TinyApp</a>
    <div class="collapse navbar-collapse" id="navbarNavAltMarkup">
      <div class="navbar-nav">
        <a class="nav-item nav-link" href="/urls">My URLs</a>
        <a class="nav-item nav-link" href="/urls/new">Create New URL</a>
      </div>
    </div>
    <div>
      <% if (!user) { %>
        <form class="form-inline" method="POST" action="/login">
          <input class="form-control" name="username" type="text" placeholder="Username" style="margin-right: 1em"/>
          <input class="btn btn-primary" type="submit" value="Login"/>
        </form>
        <% } else { %>
          <form class="form-inline right" method="POST" action="/logout">
            <label class="nav-item" style="margin-right: 1em">Logged in as: <%= user.email %></label>
            <input class="btn btn-secondary" type="submit" value="Logout"/>
          </form>
          <% } %>
        </div>
    <button class="navbar-toggler" type="button" data-toggle="collapse" data-target="#navbarNavAltMarkup" aria-controls="navbarNavAltMarkup" aria-expanded="false" aria-label="Toggle navigation">
      <span class="navbar-toggler-icon"></span>
    </button>
  </nav>
</header>